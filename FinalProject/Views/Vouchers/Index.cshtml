    @model IEnumerable<FinalProject.Models.Voucher>
    <div id="nav-cont" >
	<nav class="navbar" id="nav-cont1">
		<div class="container-fluid" id="nav-cont2">
			<ul class="navbar-nav" id="nav-cont3">
				<li class="nav-item" id="content1">
					<a class="nav-link" asp-action="Index" asp-controller="Giohangs" asp-route-idgh="@GiohangsDAL.GetIDDH()" value="">
						<i class="bi bi-list-ul"></i>
						Danh sách đơn hàng
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="Index" asp-controller="Vouchers">
						<i class="bi bi-list-ul"></i>
						Voucher
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="Index" asp-controller="Taikhoans">
						<i class="bi bi-list-ul"></i>
						Quản lí tài khoản
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="Index" asp-controller="Phones">
						<i class="bi bi-list-ul"></i>
						Quản lí điện thoại
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-action="Chitiet" asp-controller="Laptops">
						<i class="bi bi-list-ul"></i>
						Quản lí laptop
					</a>
				</li>
			</ul>
		</div>
	</nav>
</div>
<a class="btn btn-warning fw-bold" data-bs-toggle="modal" data-bs-target="#exampleModalCreate" style="margin-bottom:10px">Tạo đơn hàng mới</a>
    <div class="modal fade" id="exampleModalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel2">Tạo đơn hàng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                @await Html.PartialAsync("Create",new FinalProject.Models.Voucher())

                </div>
            </div>
        </div>
    </div>
<div class="container box p-3" style="background:white;border-radius:8px;overflow-x:auto;">
    <div class="carttable">
        <table class="table table-responsive text-center m-0" style="font-size:large">
            <thead style="background-color:#ff9800">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Voucher1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GiamGia)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="fw-bold align-middle">
                <tbody >
                @foreach (var item in Model)
                {
                    
                    <tr>
                        <td class="vc">
                            @Html.DisplayFor(modelItem => item.Voucher1)
                        </td>
                        <td class="gg">
                            @Html.DisplayFor(modelItem => item.GiamGia)
                        </td>

                        <td>
                            <a class="btn btn-primary fw-bold" onclick="editvoucher(this)" data-bs-toggle="modal" data-bs-target="#exampleModalEdit" >
                                <i class="bi bi-pencil-fill"></i>
                                Sửa
                            </a> |
                            <a class="btn btn-danger fw-bold" onclick="deletevoucher(this)" data-bs-toggle="modal" data-bs-target="#exampleModalDelete">
                                <i class="bi bi-trash3-fill"></i>
                                Xóa
                            </a>
                            <div class="modal fade" id="exampleModalEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel2">Sửa đơn hàng</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form asp-action="EditVoucher" asp-controller="Vouchers">
                                                <div class="form-group">
                                                    <label  class="control-label">Mã Voucher</label>
                                                    <input required name="vc" id="vctx"  class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <label  class="control-label">Giảm giá</label>
                                                    <input id="vcgg" name ="gg" class="form-control" />
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Save" class="btn btn-primary" style="margin-top:10px;"/>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal fade" id="exampleModalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel2">Xóa đơn hàng</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Bạn có chắc muốn xóa voucher này không ?</p>
                                            <form asp-action="Xoa" asp-controller="Vouchers">
                                                <div class="form-group">
                                                    <label  class="control-label">Mã Voucher</label>
                                                    <input required name="vc" id="vccode"  class="form-control" />
                                                </div
                                                                                                <div class="form-group">

                                                <input type="submit" value="Delete" class="btn btn-danger" style="margin-top:10px;float:right;" />
                                                                                            </div

                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    function editvoucher(e) {
        var p = e.parentNode.parentNode;
        var vc = p.getElementsByClassName("vc")[0].innerText;
        var gg = p.getElementsByClassName("gg")[0].innerText;
        $("#vctx").val(vc);
        $("#vcgg").val(gg);
    }
    function deletevoucher(e) {
        var p = e.parentNode.parentNode;
        var vc = p.getElementsByClassName("vc")[0].innerText;
        $("#vccode").val(vc);
    }
</script>