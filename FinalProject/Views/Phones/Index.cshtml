@model IEnumerable<FinalProject.Models.Phone>
@using System.Globalization;
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
<div class="row">
	<div class="text-start my-3 col-md-6">

		<button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
			Hãng
		</button>
		<ul class="dropdown-menu">
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="" asp-route-Nhucau="@ViewData["NhuCau"]">Tất cả</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="Samsung" asp-route-Nhucau="@ViewData["NhuCau"]"><img class="hinhfilter" src="/images/samsung.png"> Samsung</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="Apple" asp-route-Nhucau="@ViewData["NhuCau"]"><img class="hinhfilter" src="/images/apple.png"> Apple</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="OPPO" asp-route-Nhucau="@ViewData["NhuCau"]"><img class="hinhfilter" src="/images/oppo.png"> OPPO</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="Xiaomi" asp-route-Nhucau="@ViewData["NhuCau"]"><img class="hinhfilter" src="/images/xiaomi.png"> Xiaomi</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="Vivo" asp-route-Nhucau="@ViewData["NhuCau"]"><img class="hinhfilter" src="/images/vivo.png"> Vivo</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="Realme" asp-route-Nhucau="@ViewData["NhuCau"]"><img class="hinhfilter" src="/images/realme.png"> Realme</a></li>

		</ul>

		<button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
			Nhu cầu
		</button>
		<ul class="dropdown-menu">
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="">Tất cả</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="Cao cấp, sang trọng"><img class="hinhfilter" src="/images/luxury.png"> Cao cấp, sang trọng</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="Chụp ảnh, quay phim"><img class="hinhfilter" src="/images/camera.png"> Chụp ảnh, quay phim</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="Chơi game, cấu hình mạnh"><img class="hinhfilter" src="/images/gaming.png"> Chơi game, cấu hình mạnh</a>
			</li>

		</ul>
		<button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
			Giá
		</button>

		<ul class="dropdown-menu">
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]">Tất cả</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]" asp-route-Giamin="0" asp-route-Giamax="2000000">Dưới 2 triệu</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]" asp-route-Giamin="2000000" asp-route-Giamax="4000000">Từ 2 đến 4 triệu</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]" asp-route-Giamin="4000000" asp-route-Giamax="7000000">Từ 4 đến 7 triệu</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]" asp-route-Giamin="7000000" asp-route-Giamax="13000000">Từ 7 đến 13 triệu</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]" asp-route-Giamin="13000000" asp-route-Giamax="20000000">Từ 13 đến 20 triệu</a>
			</li>
			<li>
				<a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				   asp-route-Nhucau="@ViewData["NhuCau"]" asp-route-Giamin="20000000" asp-route-Giamax="200000000">Trên 20 triệu</a>
			</li>
			<div class="dropdown-divider"></div>
			<form asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-controller="Phones" asp-route-Hang="@ViewData["Hang"]"
				  asp-route-Nhucau="@ViewData["NhuCau"]">
				<div class="my-2">
					<i class="bi bi-cash-coin minhhoa"></i><h5 style="display:inline"> Hoặc chọn mức giá phù hợp với bạn</h5>
				</div>
				<div class="float-start w-50">
					<input class="w-100" id="pricemin" value="500000" type="number" min="500000" max="50000000" step="100000">
				</div>
				<div class="float-start w-50 text-end">
					<input class="w-100" id="pricemax" value="50000000" type="number" min="500000" max="50000000" step="100000">
				</div>
				<div class="min-max-range p-3">
					<input name="Giamin" type="range" value="500000" id="pricerangemin" class="range float-start" min="500000" max="50000000" step="100000" />
					<input name="Giamax" type="range" value="50000000" id="pricerangemax" class="range float-end" min="500000" max="50000000" step="100000" />


				</div>
				<div class="text-center">
					<button class="btn btn-light text-center" type="submit">Áp dụng</button>
				</div>


			</form>

		</ul>

	</div>
	<div class="text-end my-3 col-md-6">
		<button type="button" class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
			Sắp xếp
		</button>
		<ul class="dropdown-menu">
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["PriceDESC"]">Giá cao đến thấp</a></li>
			<li><a class="dropdown-item" asp-action="Index" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-sortOrder="@ViewData["PriceASC"]">Giá thấp đến cao</a></li>

		</ul>
	</div>
</div>

<div class="row">
	@foreach (var item in Model)
	{

		<a asp-action="Details" asp-route-id="@item.Id" class="col-md-2 items text-center">
			<div>
				<h6 class="hang" style="display:none">@item.Hang</h6>
				<h6 class="nhucau" style="display:none">@item.NhuCau</h6>
				<h5><b>@item.Ten</b></h5>

				<img src=@item.ImagePath height="150px">
				<div>
					<i class="bi bi-cpu minhhoa"></i><h6 style="display:inline"> @item.Chip</h6>
				</div>
				<div>
					<i class="bi bi-phone minhhoa"></i><h6 style="display:inline">@item.ManHinh</h6>
				</div>
				<div>
					<h6><b>@item.Gia.ToString("C",CultureInfo.CreateSpecificCulture("vi-VN"))</b></h6>
				</div>


			</div>

		</a>

	}
</div>
</div>
@*Hàm đổi giá trị khi trượt thanh tầm giá*@
<script>
	var minslider = document.getElementById("pricerangemin")
	var maxslider = document.getElementById("pricerangemax")
	var minoutput = document.getElementById("pricemin")
	var maxoutput = document.getElementById("pricemax")
	minoutput.value = minslider.value;
	maxoutput.value = maxslider.value;
	minslider.oninput = function() {
		minoutput.value = this.value;
	}
	maxslider.oninput = function() {
		maxoutput.value = this.value;
	}
</script>
