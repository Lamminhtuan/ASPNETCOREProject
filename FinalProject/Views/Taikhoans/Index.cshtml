@model IEnumerable<FinalProject.Models.Taikhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container box p-3 h4" style="overflow-x:auto;">
	<div class="mb-3">
		<h2 class="fw-bold d-inline"><i class="bi bi-person-circle"></i> Tài khoản</h2>
	</div>

	
		<div class="carttable">
			<table class="table table-responsive text-center m-0 h4">
				<thead style="background-color:#ff9800">
					<tr>
						<th>Email</th>
						<th>Họ tên</th>
						<th>Mật khẩu</th>
						<th>Địa chỉ</th>
						<th>SDT</th>
			<th>Vai trò</th>
			<th></th>
					</tr>
				</thead>
				<tbody class="fw-bold align-middle">
					@foreach (var item in Model)
					{
						<tr>
							
						
							<td>@item.Email"</td>
							<td>@item.HoTen</td>

							<td>@item.MatKhau</td>
								<td>@item.DiaChi</td>
							<td>@item.Sdt</td>
								<td>@item.VaiTro</td>
							<td><a href="#" onclick="delitem(this)"><i class="bi bi-trash dobtn"></i></a></td>
						</tr>
					}
				</tbody>
			</table>


		</div>
		</div>


	
	